{% for ou in openldap['preset_ldiff'].keys() %}
dn: ou={{ ou }},{{ conf['ldap_base_dn'] }}
changetype: add
objectClass: organizationalUnit
objectClass: top
ou: {{ ou }}

{% if ou == 'users' %}
{% for name, data in openldap['preset_ldiff'][ou].items() %}
{% if data['person'] %}
dn: cn={{ name }},ou={{ ou }},{{ conf['ldap_base_dn'] }}
changetype: add
objectClass: inetOrgPerson
objectClass: organizationalPerson
objectClass: posixAccount
objectClass: mailAccount
objectClass: person
objectClass: top
cn: {{ name }}
uid: {{ name }}
homeDirectory: /home/{{ name }}
uidNumber: {{ data['id'] }}
gidNumber: {{ data['id'] }}
sn: {{ data['sn'] }}
displayName: {{ data['displayName'] }}
givenName: {{ data['givenName'] }}
mail: {{ name }}@{{ conf['domain'] }}
ou: {{ data['ou'] }}
mailenable: ok
mailAlias: {{ name }}@{{ conf['domain'] }}
userPassword: {{ data['userPassword'] }}

{% else %}
dn: cn={{ name }},ou={{ ou }},{{ conf['ldap_base_dn'] }}
changetype: add
objectClass: mailAccount
objectClass: organizationalRole
objectClass: simpleSecurityObject
objectClass: top
cn: {{ name }}
mailenable: ok
mailAlias: {{ name }}@{{ conf['domain'] }}
mail: {{ name }}@{{ conf['domain'] }}
userPassword: {{ data['userPassword'] }}

{% endif %}
{% endfor %}

{% endif %}

{% if ou == 'groups' %}
{% for name, data in openldap['preset_ldiff'][ou].items() %}
dn: cn={{ name }},ou={{ ou }},{{ conf['ldap_base_dn'] }}
changetype: add
objectClass: groupOfUniqueNames
objectClass: top
description: {{ openldap['preset_ldiff'][ou][name]['description']|default(name) }}
cn: {{ name }}
{% for cn in openldap['preset_ldiff'][ou][name]['members'] %}
uniqueMember: cn={{ cn }},ou=users,{{ conf['ldap_base_dn'] }}
{% endfor %}

{% endfor %}
{% endif %}

{% endfor %}

dn: ou=mailDomains,{{ conf['ldap_base_dn'] }}
changetype: add
objectClass: organizationalUnit
objectClass: top
ou: mailDomains

dn: virtualdomain={{ conf['domain'] }},ou=mailDomains,{{ conf['ldap_base_dn'] }}
changetype: add
objectClass: mailDomain
objectClass: top
virtualdomain: {{ conf['domain'] }}

dn: ou=mailAliases,{{ conf['ldap_base_dn'] }}
changetype: add
objectClass: organizationalUnit
objectClass: top
ou: mailAliases

dn: mailalias={{ conf['domain'] }},ou=mailAliases,{{ conf['ldap_base_dn'] }}
changetype: add
objectClass: mailAlias
objectClass: top
mailalias: {{ conf['domain'] }}
mailenable: ok
